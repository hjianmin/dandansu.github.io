<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>platform</display-name>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- 注册servlet -->
	<servlet>
  		<servlet-name>RegisterServlet</servlet-name>
  		<servlet-class>platform.servlet.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/servlet/RegisterServlet</url-pattern>
	</servlet-mapping>
	
	<!-- 登录servlet -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>platform.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
  		<servlet-name>LoginServlet</servlet-name>
  		<url-pattern>/servlet/LoginServlet</url-pattern>
	</servlet-mapping>
	
	<!-- 登录成功跳转servlet -->
	<servlet>
		<servlet-name>LoginUIServlet</servlet-name>
		<servlet-class>platform.UI.LoginUIServlet</servlet-class>
	</servlet>
	<servlet-mapping>
  		<servlet-name>LoginUIServlet</servlet-name>
  		<url-pattern>/servlet/LoginUIServlet</url-pattern>
	</servlet-mapping>
  
  	<!-- 电脑对战servlet -->
	<servlet>
  		<servlet-name>ComputerPlayServlet</servlet-name>
  		<servlet-class>platform.servlet.ComputerPlayServlet</servlet-class>
	</servlet>
	<servlet-mapping>
  		<servlet-name>ComputerPlayServlet</servlet-name>
  		<url-pattern>/servlet/ComputerPlayServlet</url-pattern>
	</servlet-mapping>
	
	<!-- 人人对战servlet -->
	<servlet>
  		<servlet-name>PlayServlet</servlet-name>
  		<servlet-class>platform.servlet.PlayServlet</servlet-class>
	</servlet>
	<servlet-mapping>
  		<servlet-name>PlayServlet</servlet-name>
  		<url-pattern>/servlet/PlayServlet</url-pattern>
	</servlet-mapping>
	
	<!-- 图片验证码servlet -->
	<servlet>
		<servlet-name>validateCodeServlet</servlet-name>
		<servlet-class>platform.servlet.ValidateCodeServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>validateCodeServlet</servlet-name>
		<url-pattern>*.images</url-pattern>
	</servlet-mapping>
	
	<!-- sse推送servlet -->
	<servlet>
		<servlet-name>SseServlet</servlet-name>
		<servlet-class>platform.servlet.SseServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>SseServlet</servlet-name>
		<url-pattern>/SseServlet</url-pattern>
	</servlet-mapping>
	
	<!-- session失效时间 -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config> 
</web-app>